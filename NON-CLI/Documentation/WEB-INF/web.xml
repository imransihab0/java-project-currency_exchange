    <!-- AddCurrencyServlet -->
    <servlet>
        <servlet-name>AddCurrencyServlet</servlet-name>
        <servlet-class>AddCurrencyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCurrencyServlet</servlet-name>
        <url-pattern>/addCurrency</url-pattern>
    </servlet-mapping>

    <!-- UpdateCurrencyRate -->
    <servlet>
        <servlet-name>UpdateCurrencyRateServlet</servlet-name>
        <servlet-class>UpdateCurrencyRateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCurrencyRateServlet</servlet-name>
        <url-pattern>/updateCurrencyRate</url-pattern>
    </servlet-mapping>

    <!-- DeleteCurrency -->
    <servlet>
        <servlet-name>DeleteCurrencyServlet</servlet-name>
        <servlet-class>DeleteCurrencyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCurrencyServlet</servlet-name>
        <url-pattern>/deleteCurrency</url-pattern>
    </servlet-mapping>

</web-app>
